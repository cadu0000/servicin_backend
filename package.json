    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.7.0",
    "prisma": "^6.17.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
